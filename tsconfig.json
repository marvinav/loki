{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "node20",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "allowJs": true,
    "erasableSyntaxOnly": true,
    "sourceMap": true,
    "declaration": false,
    // "noUncheckedIndexedAccess": true,  // Disabled for migration - too strict for existing patterns
    // "exactOptionalPropertyTypes": true,  // Disabled for migration - too strict for existing patterns
    "strict": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
