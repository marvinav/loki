{
  "name": "@loki/root",
  "version": "0.18.1",
  "description": "Visual Regression Testing for react-storybook",
  "type": "module",
  "private": true,
  "bin": {
    "loki": "bin/loki"
  },
  "scripts": {
    "format": "prettier '{,packages/**/,examples/**/,website/**/,docs/**/,test/**/,.github/**/}*.{md,js,jsx,json,yml}' --write",
    "lint": "eslint packages/*/src",
    "test": "node ./dist/index.js --reactUri file:./test",
    "test-ci": "jest --testLocationInResults --ci --outputFile=test_results.json --json",
    "publish-docs": "GIT_USER=oblador yarn workspace @loki/website publish-gh-pages"
  },
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "Joel Arvidsson",
    "email": "joel@oblador.se"
  },
  "homepage": "https://loki.js.org",
  "bugs": {
    "url": "https://github.com/oblador/loki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/oblador/loki.git"
  },
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "test/*",
      "website",
      "examples/react",
      "examples/renderer-aws-lambda",
      "examples/running-renderer-aws-lambda"
    ]
  },
  "dependencies": {
    "async": "^3.2.4",
    "chrome-launcher": "0.15.2",
    "chrome-remote-interface": "^0.32.1",
    "debug": "^4.1.1",
    "execa": "^5.0.0",
    "find-free-port-sync": "^1.0.0",
    "fs-extra": "^9.1.0",
    "looks-same": "^4.0.0",
    "mime-types": "^2.1.35",
    "ramda": "^0.31.3",
    "shelljs": "^0.8.3",
    "wait-port": "^1.1.0"
  },
  "devDependencies": {
    "@types/chrome-remote-interface": "^0.33.0",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.5.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.5.1",
    "lerna": "^3.22.1",
    "prettier": "^2.6.1",
    "tsx": "^4.20.5"
  },
  "resolutions": {
    "chokidar": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/examples/",
      "/test/cli/generated/"
    ]
  }
}
